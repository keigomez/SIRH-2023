@model SIRH.Web.ViewModels.BusquedaDiferenciaSalarialVM

@{
    ViewBag.Title = "BuscarDiferenciasSalariales";
    Layout = "~/Views/Shared/DiferenciaSalarial.cshtml";
}

<h2>Consultar Diferencias Salariales</h2>

<div class="jumbotron">
    <center>
        @using (Ajax.BeginForm("ResultadoBusquedaDiferenciaSalarial", "DiferenciaSalarial", new AjaxOptions
        {
            HttpMethod = "Post",
            UpdateTargetId = "dvResultado",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "SuccessCargarFuncionario",
            OnComplete = "CompleteCargarFuncionario",
            OnBegin = "BeginCargarFuncionario"
        }))
        {
            <div class="card">
                <div class="card-header">
                    Parametros de busqueda
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Filtro.Funcionario)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Filtro.Funcionario.Cedula, new { @class = "form-control", @placeholder = "", style = "width: 280px;" })
                            @Html.ValidationMessageFor(model => model.Filtro.Funcionario.Cedula)
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Filtro.Puesto.CodPuesto)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Filtro.Puesto.CodPuesto, new { @class = "form-control", @placeholder = "", style = "width: 280px;" })
                            @Html.ValidationMessageFor(model => model.Filtro.Puesto.CodPuesto)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Filtro.Clase)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Filtro.Clase.DesClase, new { @class = "form-control", @placeholder = "", style = "width: 280px;" })
                            @Html.ValidationMessageFor(model => model.Filtro.Clase.DesClase)
                        </div>
                        <div class="form-group col-6">
                            @Html.LabelFor(model => model.Filtro.Especialidad)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Filtro.Especialidad.DesEspecialidad, new { @class = "form-control", @placeholder = "", style = "width: 280px;" })
                            @Html.ValidationMessageFor(model => model.Filtro.Especialidad.DesEspecialidad)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <input id="btnBuscar" name="SubmitButton" class="btn btn-secondary" type="submit" value="Buscar" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <div id="preloader" class="loader" style="display: none"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </center>
</div>

<div id="dvResultado"></div>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioCaucion.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>

