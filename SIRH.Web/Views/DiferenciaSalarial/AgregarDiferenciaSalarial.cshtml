@model SIRH.Web.ViewModels.FormularioDiferenciaSalarialVM

@{
    ViewBag.Title = "Agregar Diferencia Salarial";
    Layout = "~/Views/Shared/DiferenciaSalarial.cshtml";
}

<link rel="stylesheet" href="~/Content/datetimepicker.css">
<div class="container-fluid text-center">
    <h2>Agregar Diferencia Salarial </h2>
    <div class="jumbotron p-0 mt-3">
        <div class="nav nav-pills flex-column flex-lg-row text-center">
            <h5 class="flex-lg-fill nav-link @((@Model.Paso == 1)? "active rounded-0" : "")"> 1 - Agregar Puestos </h5>
            <h5 class="flex-lg-fill nav-link @((@Model.Paso == 2 || @Model.Paso == 3)? "active rounded-0" : "")"> 2 - Agregar Periodo </h5>
            <h5 class="flex-lg-fill nav-link @((@Model.Paso == 4)? "active rounded-0" : "")"> 3 - Ver Periodos </h5>
            <h5 class="flex-lg-fill nav-link @((@Model.Paso == 5)? "active rounded-0" : "")"> 4 - Ver Resumen </h5>
        </div>
        @switch (Model.Paso)
        {
            case 1:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_AgregarPuestos.cshtml", Model)
                    break;
                }
            case 2:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_PreAgregarPeriodo.cshtml", Model)
                    break;
                }
            case 3:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_AgregarPeriodo.cshtml", Model)
                    break;
                }
            case 4:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_VerPeriodos.cshtml", Model)
                    break;
                }
            case 5:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_VerResumen.cshtml", Model)
                    break;
                }
            default:
                {
                    @Html.Partial("~/Views/DiferenciaSalarial/_ErrorDiferenciaSalarial.cshtml");
                    break;
                }
        }
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioDiferenciaSalarial.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>

<script src="~/Scripts/Pages/codclase.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/codclase2.js" type="text/javascript"></script>
<script src="~/Scripts/funciones-generales.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/IndexFuncionario.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/ubicacion-control.js"></script>
<script src="~/Scripts/Pages/FormularioPerfilFuncionario.js" type="text/javascript"></script>
<script src="~/Scripts/puesto-control.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/funciones-dialogos.js"></script>


